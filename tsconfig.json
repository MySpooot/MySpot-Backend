{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2019",
        "lib": ["es2019"],
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "moduleResolution": "node"
    },
    "exclude": ["node_modules", "dist"]
}
